<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutForTvs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="17dp"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    >

    <ImageView
        android:id="@+id/userImg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/user"
        app:layout_constraintBottom_toTopOf="@id/dobroJutro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/korisnickoIme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.204"></ImageView>

    <TextView
        android:id="@+id/korisnickoIme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/korisnickoIme"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/datum"
        app:layout_constraintEnd_toStartOf="@id/userImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/datum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/datum"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@id/dobroJutro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/korisnickoIme"></TextView>

    <TextView
        android:id="@+id/dobroJutro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dobroJutro"
        android:layout_marginBottom="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/loremIpsum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/datum"></TextView>

    <TextView
        android:id="@+id/loremIpsum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/loremIpsum"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dobroJutro"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>